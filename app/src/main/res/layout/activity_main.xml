<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_rounded_background"
        android:backgroundTint="#515151"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/black"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Hesap Makinesi"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_AC"
                android:backgroundTint="#808080"
                android:text="AC"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_openBracket"
                android:backgroundTint="#808080"
                android:text="("/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_closeBracket"
                android:backgroundTint="#808080"
                android:text=")"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_div"
                android:backgroundTint="#FFA500"
                android:text="/"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_seven"
                android:backgroundTint="#474747"
                android:text="7"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_eight"
                android:backgroundTint="#474747"
                android:text="8"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_nine"
                android:backgroundTint="#474747"
                android:text="9"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_multi"
                android:backgroundTint="#FFA500"
                android:text="*"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_four"
                android:backgroundTint="#474747"
                android:text="4"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_five"
                android:backgroundTint="#474747"
                android:text="5"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_six"
                android:backgroundTint="#474747"
                android:text="6"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_minus"
                android:backgroundTint="#FFA500"
                android:text="-"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_one"
                android:backgroundTint="#474747"
                android:text="1"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_two"
                android:backgroundTint="#474747"
                android:text="2"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_three"
                android:backgroundTint="#474747"
                android:text="3"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_plus"
                android:backgroundTint="#FFA500"
                android:text="+"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_zero"
                android:backgroundTint="#474747"
                android:text="0"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_Dot"
                android:backgroundTint="#474747"
                android:text="."/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_C"
                android:backgroundTint="#474747"
                android:text="C"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:id="@+id/button_equal"
                android:backgroundTint="#FFA500"
                android:text="="/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>